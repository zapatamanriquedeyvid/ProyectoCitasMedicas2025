<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0">


<persistence-unit name="citasmedicas" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <!-- Entidades JPA (se van agregando aquí) -->
       <class>com.CitasMedicas.entidad.Paciente</class>
	   <class>com.CitasMedicas.entidad.Apoderado</class>
	   <class>com.CitasMedicas.entidad.Cita</class>
	   <class>com.CitasMedicas.entidad.Medico</class>
	   <class>com.CitasMedicas.entidad.Usuario</class>
	   <class>com.CitasMedicas.entidad.DiaTrabajo</class>
	   <class>com.CitasMedicas.entidad.Especialidad</class>
        <class>com.CitasMedicas.entidad.Administrador</class>
        
        <properties>
        
            <!-- Configuración de conexión -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
   			<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/citasmedicas2025?serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="mysql"/>

            <!-- Configuración EclipseLink -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <property name="eclipselink.ddl-generation" value="none"/>
        </properties>
        
        
    </persistence-unit>


</persistence>