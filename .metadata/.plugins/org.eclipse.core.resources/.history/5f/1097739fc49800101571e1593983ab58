		 //variable para una hora
		Time hora;
		Time horaInicial;
		Time horaFinal;
		
		//insertando un valor a la variable hora
		hora= Time.valueOf("06:00:00");
		horaInicial= Time.valueOf("08:00:00");
		horaFinal= Time.valueOf("12:00:00");
		
		horaInicial= new Time(horaInicial.getTime() - 3600000);
		horaFinal= new Time(horaFinal.getTime() + 3600000);
		
		//bucle para incrementar la hora en 1 hora
		for(int i=1; i<=4; i++) {
			System.out.println("Hora: "+hora);
			
			hora= new Time(hora.getTime() + 3600000); //3600000 milisegundos = 1 hora
			//validar que la hora este entre la hora inicial y final
			if(hora.after(horaInicial) && hora.before(horaFinal)) {
				System.out.println("La hora "+hora+" esta dentro del rango");
				break;
			}else {
				System.out.println("La hora "+hora+" esta fuera del rango");
				break;
			}
			
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
